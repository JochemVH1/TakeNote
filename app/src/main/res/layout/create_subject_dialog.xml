<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp" android:layout_height="140dp" android:orientation="vertical">

    <TextView
        android:id="@+id/nameSubject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Name" />

    <EditText
        android:id="@+id/editTextSubjectName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameSubject"
        android:layout_below="@id/nameSubject"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:width="150dp" />
</RelativeLayout>